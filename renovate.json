{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "all dependencies",
      "enabled": true,
      "matchPackageNames": [
        "*"
      ]
    }
  ],
  "automerge": true,
  "includePaths": [
    "website-breaker/package.json",
    "website-breaker/package-lock.json",
    "website-breaker/yarn.lock"
  ],
  "ignorePaths": [
    "**/*"
  ]
}
